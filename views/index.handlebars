<html>
	<head>
		<title>Browse Lectures</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
			<link href="/css/project.css" rel="stylesheet">
				<meta name="viewport" content="width=device-width, initial-scale=1">
				</head>
				<body>
					<div class="row" style="background-color:white; height:5%">
						<div class="col-md-10"></div>
						<div class="col-md-2">
							<b class="icon" style="float:right; padding-left:3%">04:20</b>
							<i class="fas fa-wifi icon" style="float:right; padding-left:3%"></i>
							<i class="fas fa-signal icon" style="float:right; padding-left:3%"></i>
							<i class="fas fa-battery-three-quarters icon" style="float:right; padding-left:3%"></i>
						</div>
					</div>
					<div class="row" style="background-color:#006A96; height:10%; align-items:center; display: flex">
						<div class="col-md-2" align="center" style="width: 33%">
							<a href="/"> <i class="fas fa-home fa-2x licon" style="color:white;"></i> </a>
						</div>
						<div class="col-md-8" align="center" style="width: 33%">
							<h3 style="color:white">ProfScribe</h3>
						</div>
						<div class="col-md-2" align="center" style="width: 33%">
							<div class="dropdown">
								<i class="fas fa-bars fa-align-justify fa-2x icon" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white;"></i>
								<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
									<a class="dropdown-item" href="/profile">Profile</a>
									<a class="dropdown-item" href="/signin">Signout</a>
									<a class="dropdown-item" href="/help">Help</a>
								</div>
							</div>
						</div>
					</div>

					<div class="row" style="background-color:white">
						<div class="col-md-12" align="center" style="padding-top:1%;padding-bottom:1%">
									<div class="dropdown">
									  <button class="btn btn-secondary btn-lg dropdown-toggle btn-success" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="dropdownMenuButton" >
									    Recently Uploaded
									  </button>
									  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
											<a class="dropdown-item" href="/playback" id="classa">Class A</a>
											<a class="dropdown-item" href="/playback" id="classb">Class B</a>
											<a class="dropdown-item" href="/playback" id="classcse">CSE courses</a>
									  </div>
									</div>
						</div>
					</div>

		 <div class="row" style="background-color:white; height:100%">
			 {{#each records }}
					<div class="col-md-4">
	        	<a href="/playback">
			    		<div class="card">
						    <img class="card-img-top" src="{{ picture }}" alt="Card image cap">
							    <div class="card-body">
							      <h5 class="card-title">{{ title }}</h5>
							      <p class="card-text">{{ profesor }}</p>
							    </div>
						   	<div class="card-footer">
							    <small class="text-muted">{{ date }}, Duration: {{ duration }}</small>
							  </div>
							</div>
						</a>
					</div>
				{{/each }}
			</div>
<!--
REFERENCES:
1) Smart Icons
2) Bootstrap toggle
3) MIT Opencourseware
-->


</body>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

</html>
